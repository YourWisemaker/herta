{
  "env": {
    "node": true,
    "es2021": true,
    "jest": true,
    "mocha": true,
    "es6": true
  },
  "extends": "airbnb-base",
  "parserOptions": {
    "ecmaVersion": 2022,
    "sourceType": "module"
  },
  "rules": {
    "no-console": "off",
    "max-len": ["error", { "code": 120 }],
    "comma-dangle": ["error", "never"],
    "no-param-reassign": "off",
    "no-underscore-dangle": "off",
    "func-names": "off",
    "no-plusplus": "off"
  },
  "overrides": [
    {
      "files": ["bin/**/*.js"],
      "env": {
        "commonjs": true
      },
      "parserOptions": {
        "sourceType": "script"
      }
    }
  ]
}
